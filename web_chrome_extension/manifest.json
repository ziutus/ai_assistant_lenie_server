{
  "manifest_version": 3,
  "name": "Lenie AI assistant",
  "version": "1.0.21",
  "description": "Wtyczka do komunikacji z API lenie-ai.eu",
  "permissions": ["storage", "activeTab", "tabs", "scripting"],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; style-src 'self' 'unsafe-inline' https://stackpath.bootstrapcdn.com; object-src 'self'"
  },

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
}

